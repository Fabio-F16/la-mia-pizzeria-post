
@using la_mia_pizzeria_static

@model List<Pizza>

<main class="container">


    @if(Model.Count() == 0)
    {
        <h1>Non ci sono pizze disponibili</h1>
    }
    else
    {
        <h1 class="text-center p-4 mb-5 text-danger bg-secondary rounded-pill">Le nostre pizze</h1>
        @foreach(Pizza pizza in Model)
        {
            <div class="card d-flex flex-row justify-content-between p-3 mb-4 bg-warning">
                <div class="col-6 ">
                    <h3> <a href="@Url.Action("DettaglioPizza", "Pizza", new {id = pizza.ID})">@pizza.Name </a> </h3>
                    <p>@pizza.Description</p>
                    <p>Prezzo: @pizza.Price&euro;</p>
                </div>
                   
                <div class="col-6">
                    <img class="w-50 rounded-circle" src="@pizza.Img" />
                </div>
            </div>
        } 
    }


</main>
              


@model Pizza
<main class="container">

    <div class="row">

        <div class="col-12">
            
            <div class="text-center">
                <h2>Crea una nuova pizza</h2>
            </div>

            <form asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div>
                    <h4>Nome Pizza:</h4>
                    <input asp-for="Name" class="d-block w-100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div>
                    <h4>Immagine:</h4>
                    <input asp-for="Img" class="d-block w-100" />
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div>

                <div>
                    <h4>Ingredienti:</h4>
                    <input asp-for="Description" class="d-block w-100" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div>
                    <h4>Prezzo:</h4>
                    <input asp-for="Price" class="d-block w-100" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div>
                    <input type="submit" class="btn btn-success mt-5" value="Crea" />
                </div>

            </form>

        </div>

    </div>
   

</main>

              

